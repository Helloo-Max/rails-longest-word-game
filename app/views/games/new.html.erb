<h1 class="mb-4">New Game</h1>

<ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p class="mt-5 assignment">What is the longest word you can find?</p>

<form action="/score" method="post">

  <!-- Adds a hidden input field with an authenticity_token; ensures the POST request is coming from your website and not from another -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="time" name="time" type="hidden" value="<%= Time.now %>"/>
  <input id="letters" name="letters" type="hidden" value="<%= @letters.join %>"/>
  <div class="input-group w-75">
    <input type="text" class="form-control rounded mr-2" name="word">
    <button class="btn btn-primary px-4" type="submit">Play</button>
  </div>
</form>

<!-- Timer -->
<div class="mt-5" id="basicUsage">00:00:00</div>
